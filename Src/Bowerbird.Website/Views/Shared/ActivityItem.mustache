<div class="summary">
    {{#User.Avatar}}
    {{>MediaSquare100}}
    {{/User.Avatar}}
  <p class="description">
    {{Description}} <abbr class="time-description" title="{{CreatedDateTime}}">{{CreatedDateTimeDescription}}</abbr>
  </p>
</div>
{{#ObservationAdded.Observation}}
<div class="details">
  {{>SightingDetails}}
</div>
<div class="actions">
  <a href="/{{Id}}/favourite" class="button add-favourite-button" title="&lt;b>Add to favourites&lt;/b> &lt;br />Add this sighting to your list of favourites">
    Add to Favourites <span></span>
  </a>

  <a href="/sightingnotes/create?id={{Id}}" class="button add-note-button" title="&lt;b>Add a note&lt;/b> &lt;br />Add some more information to this sighting, such as an identification, description of behaviour, environment etc, or add some tags">
    Add Note
  </a>

  <a href="/{{Id}}/update" class="button edit-observation-button" title="&lt;b>Edit this sighting&lt;/b> &lt;br />Edit the details of this sighting">
    Edit
  </a>

  <a href="/{{Id}}" class="button view-button">View</a>
</div>
{{/ObservationAdded.Observation}}
{{#SightingNoteAdded}}
<div class="details">
  {{>SightingNoteDetails}}
</div>
<div class="actions">
  <a href="/sightingnotes/2/update" class="button edit-observation-button" title="&lt;b>Edit this sighting note&lt;/b> &lt;br />Edit the details of this sighting note">
    Edit
  </a>    
  
  <a href="/{{Sighting.Id}}#note{{SightingNote.Id}}" class="button view-button">View</a>
</div>
{{/SightingNoteAdded}}
{{#PostAdded}}
<div class="details">
  {{>PostStreamItem}}
</div>
{{/PostAdded}}
{{#UserJoinedGroup}}
<div class="details">
  User joined group
</div>
{{/UserJoinedGroup}}