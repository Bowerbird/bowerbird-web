<div class="explore-item">
    <div class="explore-summary">
        <span class="explore-avatar">
            <img src="{{Avatar.Files.ThumbnailMedium.RelativeUri}}" />
        </span>
        <span class="explore-name">{{Name}}</span>
    </div>
    <div class="explore-details">
        {{#Organisation}}<div class="explore-details-property">Organisation:</div><div class="explore-details-value">{{Organisation}}</div>{{/Organisation}}
        {{#MemberCount}}<div class="explore-details-property">Projects</div><div class="explore-details-value">{{MemberCount}}</div>{{/MemberCount}}
        {{#Website}}<div class="explore-details-property">Website</div><div class="explore-details-value">{{Website}}</div>{{/Website}}
        {{#Description}}<div class="explore-details-property">Description</div><div class="explore-details-value">{{Description}}</div>{{/Description}}
    </div>
    <div class="view-team">
        <button value="View" class="view-team-button">View Team</button>
    </div>
</div>