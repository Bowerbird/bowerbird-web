    <h2><a href="/{{Model.ObservationAdded.Observation.Id}}">{{Model.ObservationAdded.Observation.Title}}</a></h2>
    <div>
      <div class="images">
          <div class="preview">
              {{#Model.ObservationAdded.Observation.PrimaryMedia.MediaResource}}
              {{>MediaFull768}}
              {{/Model.ObservationAdded.Observation.PrimaryMedia.MediaResource}}
          </div>
          {{#Model.ShowThumbnails}}
          <div class="thumbnails">
              {{#Model.ObservationAdded.Observation.Media}}
              {{#MediaResource}}
              {{>MediaFull480}}
              {{/MediaResource}}
              {{/Model.ObservationAdded.Observation.Media}}
          </div>
          {{/Model.ShowThumbnails}}
      </div>
      <div class="info">
        <div class="observed">
          Observed
          <span>{{Model.ObservationAdded.Observation.ObservedOnDate}}</span>
          <span>{{Model.ObservationAdded.Observation.ObservedOnTime}} AEST</span>
        </div>
        <div class="location">
          <div class="map">
            <img src="http://maps.googleapis.com/maps/api/staticmap?zoom=8&size=400x200&scale=2&maptype=terrain&markers=color:blue|{{Model.ObservationAdded.Observation.Latitude}},{{Model.ObservationAdded.Observation.Longitude}}&sensor=false" alt="Map of location" />
          </div>
          <span>{{Model.ObservationAdded.Observation.Address}}</span>
          <span>Latitude {{Model.ObservationAdded.Observation.Latitude}}</span>
          <span>Longitude {{Model.ObservationAdded.Observation.Longitude}}</span>
        </div>
      </div>
    </div>
