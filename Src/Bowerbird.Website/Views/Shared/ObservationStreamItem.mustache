    <h2><a href="/{{Observation.Id}}">{{Observation.Title}}</a></h2>
    <div>
      <div class="images">
          <div class="preview">
              {{#Observation.PrimaryMedia.MediaResource}}
              {{>MediaConstrained600}}
              {{/Observation.PrimaryMedia.MediaResource}}
              {{#Observation.PrimaryMedia.Description}}
                <div class="media-details">
                    <div class="overlay"></div>
                    <p class="description">{{Observation.PrimaryMedia.Description}}</p>
                </div>
              {{/Observation.PrimaryMedia.Description}}
          </div>
          {{#ShowThumbnails}}
          <div class="thumbnails">
              {{#Observation.Media}}
              {{#MediaResource}}
              {{>MediaSquare200}}
              {{/MediaResource}}
              {{/Observation.Media}}
          </div>
          {{/ShowThumbnails}}
      </div>
      <div class="info">
        <div class="observed">
          Observed
          <span>{{ObservedOnDescription}}</span>
        </div>
          <div class="location">
              <div class="map">
                  <!--<img src="zzhttp://maps.googleapis.com/maps/api/staticmap?zoom=8&size=400x200&scale=2&maptype=terrain&markers=color:blue|{{Model.ObservationAdded.Observation.Latitude}},{{Model.ObservationAdded.Observation.Longitude}}&sensor=false" alt="Map of location" />-->
              </div>
              <span>{{Observation.Address}}</span>
              <!--<span>Latitude {{Observation.Latitude}}</span>
                  <span>Longitude {{Observation.Longitude}}</span>-->
          </div>
        {{#ShowProjects}}
          <div class="observation-projects">
              Projects 
              <div class="observation-projects-list">
                  {{#Observation.Projects}} 
                  <div class="observation-project">
                      <a href="/{{Id}}">
                        {{#Avatar}}
                        {{>MediaSquare200}}
                        {{/Avatar}}
                      </a>
                  </div>
                {{/Observation.Projects}}
              </div>
          </div>
        {{/ShowProjects}}
      </div>
    </div>
