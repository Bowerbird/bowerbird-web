<div class="note-info">
  <div class="sighting-note-summary">
    {{#User.Avatar}}
    {{>MediaSquare100}}
    {{/User.Avatar}}
    <div class="description">
      <span>{{User.Name}}</span>
      <abbr>{{CreatedOnDescription}}</abbr>
    </div>
  </div>
  {{#Descriptions}}
  <div class="sighting-note-description {{Id}}">
    <span>{{Label}}</span>
    <p>{{Text}}</p>
  </div>
  {{/Descriptions}}
  {{#TagCount}}
  <div class="sighting-note-tags">
    <span>Tagged With</span>
    {{#Tags}}
    <a href="/search?query={{.}}">{{.}}</a>
    {{/Tags}}
  </div>
  {{/TagCount}}
  {{#Comments}}
  <div class="sighting-note-comments">
    {{#User.Avatar}}
    {{>MediaSquare100}}
    {{/User.Avatar}}
    <span>{{User.Name}} says</span>
    <p>{{Comments}}</p>
  </div>
  {{/Comments}}
</div>
<div class="info">
  <div class="sighting-notes-actions">
    <div class="vote-panel">
      <div class="vote-details">
        <span class="vote-score">{{TotalVoteScore}}</span>
        <span class="vote-label">votes</span>
      </div>
      <div class="vote-up button user-vote-score{{UserVoteScore}}" title="<b>Vote up</b> <br />This note shows research effort; The descriptions and/or tags are accurate, descriptive and meaningful<br />(Click again to undo)">+</div>
      <div class="vote-down button user-vote-score{{UserVoteScore}}" title="<b>Vote down</b> <br />This note shows no research effort; The descriptions and/or tags are not accurate, descriptive or meaningful <br />(Click again to undo)">-</div>
    </div>
    <div class="comment-panel">
      <div class="comment-details">
        <span class="comment-icon"></span>
        <span class="comment-count">0</span>
      </div>
      <a href="#" class="button add-comment-button" title="<b>Discuss this note</b> <br />Comment about this note">Discuss</a>
    </div>
  </div>
</div>