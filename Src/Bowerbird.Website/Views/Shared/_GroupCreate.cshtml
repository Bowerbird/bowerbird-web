@model GroupCreateViewModel

@using (Html.BeginForm("Create", "Group", FormMethod.Post))
{
    <div>
        Create a Group
    </div>
    <div>
        <div id="validation-result"></div>
        <div>
            @Html.LabelFor(x => x.Name)
            <br />
            @Html.TextBoxFor(x => x.Name)
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div>
            @Html.LabelFor(x => x.MissionStatement)
            <br />
            @Html.TextBoxFor(x => x.MissionStatement)
            @Html.ValidationMessageFor(x => x.MissionStatement)
        </div>
    </div>
}