    <link rel="stylesheet" type="text/css" href="/css/new/media.css?v={{#Ver}}{{{Ver}}}{{/Ver}}{{^Ver}}0{{/Ver}}" />
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700" />
  </head>
  <body class="debug">
      <div id="debug-info"></div>
    <header>
      <div>
        <h1>Bowerbird</h1>
        <nav id="account-menu">
          <ul>
            {{#AuthenticatedUser}}
            <li class="user-menu">
              <a href="{{AuthenticatedUser.User.Id}}/update">{{AuthenticatedUser.User.Name}}</a>
            </li>
            <li>
              <a href="/account/logout">Logout</a>
            </li>
            <!--<li class="observations-menu">
              <a href="/observations/create" class="new-observation-button">
                <img src="/img/observation-button.png" alt="" />
              </a>
            </li>-->
            {{/AuthenticatedUser}}
            {{^AuthenticatedUser}}
            <li>
              <a href="/account/login">Login</a>
            </li>
            <li>
              <a href="/account/register">Register</a>
            </li>
            {{/AuthenticatedUser}}
          </ul>
        </nav>
        <nav id="explore-menu">
          <ul class="explore-menu">
            <li><a href="/projects">Projects</a></li>
            <li><a href="/teams">Teams</a></li>
            <li><a href="/organisations">Organisations</a></li>
          </ul>
        </nav>
        <nav id="search-menu">
          <div>
            <label for="search">Search</label>
            <input type="text" value="" name="search" id="search" placeholder="Search for observations, people and groups" />
          </div>
        </nav>
      </div>
    </header>
    <article>
        {{>Body}}
    </article>
    <footer>
    </footer>
    <img src="/img/loader.png" alt="" class="hidden" />
