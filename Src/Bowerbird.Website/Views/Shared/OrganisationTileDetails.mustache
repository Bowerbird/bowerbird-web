<h3>
  <a href="/{{Id}}">{{Name}}</a>
</h3>
<div class="avatar">
  {{#Avatar}}
  {{>MediaSquare200}}
  {{/Avatar}}
</div>
<p class="description">
  {{Description}}
</p>
<ul class="categories">
  {{#Categories}}
  <li>
    <img src="/img/category-{{.}}.png" alt="{{.}}" />
  </li>
  {{/Categories}}
</ul>
<div class="info">
  <div class="sighting-actions">
    <div class="users-badge small">
      <span class="small-icon user-icon"></span>
      <span class="count">{{MemberCount}}</span>
      <span class="label">members</span>
    </div>
  </div>
</div>
<div class="actions" style="display:none;">
  <a href="/{{Id}}" class="button view-button">View</a>
</div>