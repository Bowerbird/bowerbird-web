<!-- {{ sidebarItem: display links in users side bar }} -->
<script id="sidebarItem" type="text/html">
    <a href="#{{id}}/all"><img alt="{{name}}" src="{{avatar.urlToImage}}"><div><p>{{name}}</p></div></a>
