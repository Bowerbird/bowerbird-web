</script>
<!-- {{ streamListLoading: display load }} -->
<script type="text/html" id="streamListLoading">
    <div id="stream-status">
        <p>
            {{#text}}
                {{text}}
                {{#showLoader}}
                    <img src="/img/loader.png" />
                {{/showLoader}}
            {{/text}}
            {{^text}}
                <img src="/img/loader.png" />
            {{/text}}
        </p>
    </div>
</script>
<!-- {{ streamLoadMore: display load more button }} -->
<script type="text/html" id="streamLoadMore">
    <div id="stream-load-more"><input class="button" type="button" id="stream-load-more-button" value="Load More" /></div>
</script>
<!-- {{ streamList: display stream list }} -->
<script type="text/html" id="streamList">
    <div>
        <h2>Activity</h2>
        <ul>
            <li>Latest activity first</li>
            <li>All activity</li>
        </ul>
        <div id="stream-items">
        </div>
    </div>
</script>
<!-- {{ notifications: used for notifications returned to the client }} -->
<script id="notifications" type="text/html">
    <h2>Activity</h2>
    <div>
        <ul>
        </ul>
    </div>
</script>
<!-- {{ notificationsItem: used for notifications returned to the client }} -->
<script id="notificationsItem" type="text/html">
    <div class="summary">
        <img alt="" src="{{avatarUri}}">
        <p class="description">{{summaryDescription}} <span>{{createdDateTimeDescription}}</span></p>
    </div>
    <div class="details observation">
        <div>{{model.title}}</div>
        <img src="{{model.imageUri}}" alt="" />
    </div>
</script>
<!-- {{ observationStreamListItemTemplate: used for adding an observation stream item }} -->
<script id="observationStreamListItem" type="text/html">
    <div class="summary">
        <img src="{{user.avatar.urlToImage}}" alt="" />
        <p class="description">{{description}} <span>{{createdDateTimeDescription}}</span></p>
    </div>
    <div class="details">
        <h2>{{item.title}}</h2>
        <div>
            <div class="images">
                <div class="preview">
                    <img src="{{highlightMedia.originalImageUri}}" alt="" />
                </div>
                <div class="thumbnails">
                    {{#item.observationMedia}}
                    <img src="{{thumbnailImageUri}}" alt="" />
                    {{/item.observationMedia}}
                </div>
            </div>
            <div class="info">
                <div class="observed">
                    Observed
                    <span>{{observedOnDate}}</span>
                    <span>{{observedOnTime}} AEST</span>
                </div>
                <div class="location">
                    Location
                    <div class="map"><img src="http://maps.googleapis.com/maps/api/staticmap?zoom=8&size=400x200&scale=2&maptype=terrain&markers=color:blue|{{item.latitude}},{{item.longitude}}&sensor=false" alt="Map of location" /></div>
                    <span>{{item.address}}</span>
                    <span>Latitude {{item.latitude}}</span>
                    <span>Longitude {{item.longitude}}</span>
                </div>
            </div>
        </div>
</script>
<!-- {{ observationcreate: used for adding an observation }} -->
<script type="text/html" id="observationcreate">
    @Html.Partial("_ObservationCreate")
</script>
<!-- {{ observationcreatemediaresourceuploaded: display uploaded observation media resource }} -->
<script type="text/html" id="observationmediaresourceuploaded">
    <div>
        <img src="{{mediumImageUri}}" alt="" />
    </div>
    <div>
        <input type="button" value="View" class="view-media-resource-button" />
        <input type="button" value="Add Caption" class="add-caption-button" />
        <input type="button" value="Remove" class="remove-media-resource-button" />
    </div>
</script>
