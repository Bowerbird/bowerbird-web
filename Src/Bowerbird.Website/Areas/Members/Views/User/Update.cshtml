@model Bowerbird.Web.ViewModels.Members.UserUpdate

@{
    ViewBag.Title = "Update Profile";
}

<section class="single-small">

<div class="form">
<h2>Update Profile</h2>

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true, "There were some problems with your profile details.")

    <fieldset>
        <legend>Profile Details</legend>
        <div class="field field-part-one">
            <div>
                <label for="FirstName">First Name <span>Required</span></label>
            </div>
            <div>
                @Html.TextBoxFor(x => x.FirstName)
                @Html.ValidationMessageFor(x => x.FirstName)
            </div>
        </div>
        <div class="field field-part-two">
            <div>
                <label for="LastName">Last Name <span>Required</span></label>
            </div>
            <div>
                @Html.TextBoxFor(x => x.LastName)
                @Html.ValidationMessageFor(x => x.LastName)
            </div>
        </div>
        <div class="field">
            <div>
                <label for="Email">Email <span>Required</span></label>
            </div>
            <div>
                @Html.TextBoxFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
        <fieldset>
            <legend>Tell us about yourself</legend>
            <div class="field">
                <div>
                    <label for="jobdescription">Job Description</label>
                </div>
                <div>
                    <input type="text" id="jobdescription" />
                </div>
            </div>
            <div class="field">
                <div>
                    @Html.LabelFor(x => x.Description, "Your Bio")
                </div>
                <div>
                    @Html.TextAreaFor(x => x.Description, new { rows = 8, cols = 30 })
                    @Html.ValidationMessageFor(x => x.Description)
                </div>
            </div>
        </fieldset>
        <fieldset id="media-resources-fieldset">
            <legend>Your avatar image</legend>
            <div><img src="@Url.Content(Model.Avatar.UrlToImage)" /></div>
            <p>Drag and drop your avatar image into the box below, or choose a file from your computer.</p>
            <div id="media-uploader">
            </div>
        </fieldset>
    </fieldset>
    <fieldset>
        <input type="hidden" id="AvatarId" value="" />
        <input type="submit" value="Save" />
    </fieldset>
}
</div>

</section>

@section script {
    <script type="text/javascript" src="@Url.JavaScript("bowerbirduploader.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            buildAvatarUploader();
        });
    </script>
}