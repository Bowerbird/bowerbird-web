<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@Page.Title</title>
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--  Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS : implied media="all" -->
    @* More info about SquishIt from http://www.codethinked.com/squishit-the-friendly-aspnet-javascript-and-css-squisher *@
    @Html.Raw(SquishIt.Framework.Bundle.Css()
                                     //.Add(@Url.Stylesheet("Chat.css"))
                                     .Add(@Url.Stylesheet("normalize.css"))
                                     .Add(@Url.Stylesheet("site.css"))
                                     .Add(@Url.Stylesheet("media.css"))
                                     //.Add(@Url.Stylesheet("jquery.fileupload-ui.css"))
                                     //.Add("/css/custom-theme/jquery-ui-1.8.17.custom.css")
            //.ForceRelease() // Test it out with minification
                                     .Render("~/css/style_#.css"))
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700' rel='stylesheet' type='text/css'>
    @RenderSection("header", false)
    <!-- More ideas for your <head> here: h5bp.com/docs/#head-Tips -->
    <!-- All JavaScript at the bottom, except for Modernizr and Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
    <script type="text/javascript" src="@Url.JavaScriptLib("modernizr-2.0.min.js")"></script>
    <script type="text/javascript" src="@Url.JavaScriptLib("respond.min.js")"></script>
    @*<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAXFVsz6fUl4-r-Z_kJrtJlG-IGqvjUosc&sensor=true"></script>*@
    @*changed to google maps V3 api*@
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
</head>
<body class="debug">
    <div id="debug-info"></div>
    <header> 
        <div>
            <h1>Bowerbird</h1>
            <nav id="main-menu">
                <ul>
                    <li>@Html.ActionLink("Observations", "index", "observation")</li> 
                    <li>@Html.ActionLink("People", "index", "user")</li>
                    <li>@Html.ActionLink("Groups", "index", "group")</li>
                </ul>
            </nav>
            <nav id="account-menu">
                <ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="user-menu">@*<img src="/img/avatar.jpg" alt="" />*@ @Html.ActionLink("Frank", "index", "home")</li>
                    <li class="observations-menu"><a href="#observation/create" class="new-observation-button"><img src="/img/observation-button.png" alt="" /></a></li>
                }
                else
                {
                    <li>@Html.ActionLink("Login", "login", "account")</li>
                    <li>@Html.ActionLink("Register", "register", "account")</li>
                }
                </ul>
            </nav>
            <nav id="search-menu">
                <div>
                    <label for="search">Search</label> <input type="text" value="" name="search" id="search" placeholder="Search for observations, people and groups" />
                </div>
            </nav>
        </div>
    </header>
    <article>
        @RenderBody()
    </article>
    <footer>
    </footer>

    <!--! end of #container -->
    <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
    <script type="text/javascript">      window.jQuery || document.write("<script type='text/javascript' src='@Url.JavaScriptLib("jquery-1.6.2.min.js")'>\x3C/script>")</script>
    @* Add other javascript files here if you want them squished on release *@
    @Html.Raw(SquishIt.Framework.Bundle.JavaScript()
            //.Add(@Url.JavaScript("plugins.js"))
            //.Add(@Url.JavaScript("Dialog.js"))
            //.Add(@Url.JavaScriptLib("jquery.unobtrusive-ajax.min.js"))
            //.Add(@Url.JavaScriptLib("jquery.validate.min.js"))
            //.Add(@Url.JavaScriptLib("jquery.validate.unobtrusive.min.js"))
            //.Add(@Url.JavaScriptLib("jquery-ui-1.8.16.custom.min.js"))
            .Add(@Url.JavaScriptLib("jquery.tmpl.js"))
            .Add(@Url.JavaScriptLib("jquery-ui-1.8.17.custom.min.js"))
            .Add(@Url.JavaScriptLib("json2.js"))
            .Add(@Url.JavaScriptLib("underscore-min.js"))
            .Add(@Url.JavaScriptLib("backbone.js"))
            .Add(@Url.JavaScriptLib("fileuploader.js"))
            .Add(@Url.JavaScriptLib("date-min.js"))
            //.Add(@Url.JavaScriptLib("jquery.fileupload.js"))
            .Render("~/js/script_#.js"))
    <!-- ADDED: Page Level script sections -->
    @RenderSection("script", false)
