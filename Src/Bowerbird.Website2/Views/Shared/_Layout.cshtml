<body>
    <div id="container">
        <header id="header">
            <div id="header-title">Bowerbird</div>
            <div id="main-menu-items">
                <div id="main-menu">
                    <ul>
                        <li>@Html.ActionLink("Observations", "Index", "Observation")</li> 
                        <li>@Html.ActionLink("People", "Index", "User")</li>
                        <li>@Html.ActionLink("Groups", "Index", "Group")</li>
                    </ul>
                </div>
                <div id="search-menu">
                    <div id="search-box">
                        <input type="text" value="" placeholder="Search for observations, people and groups" />
                    </div>
                </div>
            </div>
            <div id="account-menu">
                @*<ul>
                    <li>Sign In</li>
                    <li>Register</li>
                </ul>*@
                <ul>
                    <li><span>@Html.ActionLink("Login", "login", "account")</span></li>
                    @*<li><span><img src="../img/avatar.jpg" alt="" /></span> <a href="#">Frank Radocaj</a></li>*@
                </ul>
            </div>
        </header>
        <div id="main">
            @RenderBody()
        </div>
        <footer id="footer">
            <!-- stuff -->
        </footer>
    </div> 
    <!--! end of #container -->
    <!-- JavaScript at the bottom for fast page loading -->
