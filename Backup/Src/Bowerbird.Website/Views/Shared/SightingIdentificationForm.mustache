<h2>
  <span class="small-icon observation-icon"></span>Identification
</h2>
<div class="form-details">
  <div class="sighting-summary">
    {{#Model.Sighting.User}}
    {{#Avatar}}
    {{>MediaSquare100}}
    {{/Avatar}}
    <div class="description">
      <span>{{Name}}</span>
      <abbr>{{Model.Sighting.CreatedOnDescription}}</abbr>
    </div>
    {{/Model.Sighting.User}}
  </div>
  <div class="sighting">
    <div class="observation-details">
      {{#Model.Sighting}}
      {{>SightingFullDetails}}
      {{/Model.Sighting}}
    </div>
  </div>

  <form action="/identifications" method="post"  enctype="multipart/form-data">
    <fieldset class="sighting-identification-fieldset">
      <legend class="hidden">Identification Details</legend>
      {{#Model.Identification.Id}}
      <p>Edit the identification by changing the details below.</p>
      {{/Model.Identification.Id}}
      {{^Model.Identification.Id}}
      <p>Add an identification by filling in the details below.</p>
      {{/Model.Identification.Id}}
      {{#Model}}
      {{>SightingIdentificationSubForm}}
      {{/Model}}
    </fieldset>
    <fieldset>
      <input type="button" value="Save" id="save" />
      <input type="button" value="Cancel" id="cancel" />
    </fieldset>

  </form>

</div>